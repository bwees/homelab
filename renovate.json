{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "baseBranches": ["main"],
  "docker-compose": {
    "fileMatch": [
      "^compose/.*\\.ya?ml$"
    ]
  },
  "packageRules": [
    {
      "description": "Linuxserver ignore qBittorrent 20.04.1, they have an old image version that triggers renovatebot",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["linuxserver/qbittorrent"],
      "allowedVersions": "!/24.04.1/"
    }
  ]
}
